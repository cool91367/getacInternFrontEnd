@{
    ViewData["Title"] = "Login";
}
<h1>@ViewData["Title"]</h1>

<div class="container">
    <!--Input Interface-->
    <div class="row">
        <div class="col-8 offset-4">
            <div class="row">
                <div class="col-9">
                    <input type="text" id="username" class="form-control" placeholder="username" style="height:50px">
                    <input type="text" id="password" class="form-control" placeholder="password" style="height:50px">
                </div>
                <div class="col-3">
                    <button class="btn btn-primary" style="width:160px;height:50px;" onclick="authResponse('Login')">Submit</button>
                </div>
            </div>
        </div>
    </div>
</div>
