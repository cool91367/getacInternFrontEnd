@{
    ViewData["Title"] = "FaceRec";
}

<div class="container">
    <div id="result" style="display:none" class="alert alert-success alert-dismissible fade show" role="alert">
        <p id="resultText">complete</p>
        <button id="close" type="button" class="close" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="row">
        <div class="col-11">
            <h1 style="text-align:center">FaceCompare</h1>
        </div>
    </div>
    <div class="row">
        <!--img space-->
        <div class="col-5 round-border" style="height:516px;display:flex;justify-content:center;align-items:center;">
            <div style="">
                <img id="img1"  style="max-width:450px; max-height:510px" alt="Image" title="title">
            </div>
        </div>
        <div class="col-5 offset-1 round-border" style="height:516px;display:flex;justify-content:center;align-items:center;">
            <div>
                <img id="img2" src="/ImageDatabase/blackman.jpg" style="max-width:450px; max-height:510px" alt="Image" title="title">
            </div>
        </div>
    </div>
    <div class="row">
        <!--input space-->
        <div class="col-10">
            <p>Who do you want to recognize :</p>
            <input type="text" id="inputName" class="form-control" placeholder="Input person's name" style="height:30px">
        </div>
    </div>
    <br />
    <!--button-->
    <div class="row">
        <input type="button" id="compare" class="btn btn-info" value="START RECOGNIZE" style="width:1030px; height:50px" />
    </div>
</div>

@section scripts {
    <script src="~/lib/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/faceRec.js" asp-append-version="true"></script>
}
